page {
  height: 100vh;
}

video {
  width: 100%;
}

scroll-view {
  height: calc(100% - 225px);
}

scroll-view  .info {
  margin: 10rpx;
  font-size: 28rpx;
  
  /* 显示两行 */
  overflow: hidden; 
  text-overflow: ellipsis;
  display: -webkit-box; 
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical; 
}