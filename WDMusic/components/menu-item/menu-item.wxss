.menu {
  display: flex;
  flex-direction: column;
}

.album {
  position: relative;

}

.album .img{
  width: 100%;
  border-radius: 10rpx;
  overflow: hidden;
}

.album .count {
  position:absolute;
  right: 0rpx;
  bottom: 10rpx;
  padding: 10rpx;
  font-size: 20rpx;
  color: #fff;
  background-color: rgba(0, 0, 0, 0.3);
  border-radius: 10rpx;
  overflow: hidden;
}


.content {
  font-size: 30rpx;
  white-space: normal;
  
  /* 显示两行 */
  overflow: hidden; 
  text-overflow: ellipsis;
  display: -webkit-box; 
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical; 
}