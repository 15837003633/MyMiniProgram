.content {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.album{
  width: 100rpx;
  border-radius:8rpx;
  overflow: hidden;
}
 .info {
   flex-grow: 1;
   display: flex;
   flex-direction: column;
   justify-content: start;
   margin-left: 16rpx;
 }

 .info .song-name{
  font-size: 30rpx;
  color: #222;
 }

 .info .song-author{
   margin-top: 8rpx;
   font-size: 26rpx;
   color: #777;
 }

 .arrow {
  width: 30rpx;
 }